	<!--	## Window ## -->
	<windowstyle id="0" type="skinned">
		<title offset="20,10" font="Regular;20" />
		<color name="Background" color="background" />
		<color name="LabelForeground" color="foreground" />
		<color name="ListboxBackground" color="background" />
		<color name="ListboxForeground" color="foreground" />
		<color name="ListboxSelectedBackground" color="selectedBG" />
		<color name="ListboxSelectedForeground" color="selectedFG" />
		<color name="ListboxMarkedBackground" color="un40a0aa0" />
		<color name="ListboxMarkedForeground" color="foreground" />
		<color name="ListboxMarkedAndSelectedBackground" color="un4a00a0a" />
		<color name="ListboxMarkedAndSelectedForeground" color="foreground" />
		<color name="WindowTitleForeground" color="foreground" />
		<color name="WindowTitleBackground" color="background" />
		<borderset name="bsWindow">
			<pixmap filename="window/oben_links.png" pos="bpTopLeft" />
			<pixmap filename="window/oben.png" pos="bpTop" />
			<pixmap filename="window/oben_rechts.png" pos="bpTopRight" />
			<pixmap filename="window/links.png" pos="bpLeft" />
			<pixmap filename="window/rechts.png" pos="bpRight" />
			<pixmap filename="window/unten_links.png" pos="bpBottomLeft" />
			<pixmap filename="window/unten.png" pos="bpBottom" />
			<pixmap filename="window/unten_rechts.png" pos="bpBottomRight" />
		</borderset>
		<borderset name="bsListboxEntry">
			<pixmap filename="border/line.png" pos="bpTop" />
			<pixmap filename="border/line.png" pos="bpBottom" />
		</borderset>
	</windowstyle>
	<!--	## InfoBars ## -->
	<screen name="InfoBar" position="0,510" size="1280,400" backgroundColor="transparent" flags="wfNoBorder">
		<ePixmap alphatest="off" pixmap="infobar/hd.png" position="0,-7" size="1280,220" zPosition="-1" />
		<widget source="session.CurrentService" render="PiconBg" position="44,44" size="102,62" transparent="0" alphatest="blend" zPosition="1" />
		<widget source="session.CurrentService" render="Picon" position="45,45" size="100,60" alphatest="blend" backgroundColor="secondBG" transparent="1" zPosition="1">
			<convert type="ServiceName">Reference</convert>
		</widget>
		<widget source="session.CurrentService" render="ChannelNumber" position="180,65" size="70,36" backgroundColor="secondBG" transparent="1" zPosition="1" foregroundColor="foreground" font="Regular;19" valign="center" halign="left" />
		<widget source="session.CurrentService" render="Label" position="255,65" size="990,36" backgroundColor="secondBG" transparent="1" zPosition="1" foregroundColor="foreground" font="Regular;24" valign="center" halign="left">
		<convert type="ServiceName">Name</convert>
		</widget>
		<widget source="global.CurrentTime" render="Label" position="20,135" size="120,30" backgroundColor="secondBG" noWrap="1" transparent="1" zPosition="1" foregroundColor="secondFG" font="Regular;24" valign="center" halign="center">
			<convert type="ClockToText">Default</convert>
		</widget>
		<widget source="global.CurrentTime" render="Label" position="20,110" size="120,20" backgroundColor="secondBG" noWrap="1" transparent="1" zPosition="1" foregroundColor="secondFG" font="Regular;20" valign="center" halign="center">
			<convert type="ClockToText">ShortDate</convert>
		</widget>
		<widget source="session.Event_Now" render="Label" position="180,113" size="70,30" backgroundColor="secondBG" transparent="1" zPosition="1" foregroundColor="foreground" font="Regular;24" halign="left">
			<convert type="EventTime">StartTime</convert>
			<convert type="ClockToText">Default</convert>
		</widget>
		<widget source="session.Event_Now" render="Label" position="255,113" size="760,30" backgroundColor="secondBG" transparent="1" zPosition="1" foregroundColor="foreground" noWrap="1" font="Regular;24" halign="left">
			<convert type="EventName">Name</convert>
		</widget>
		<widget source="session.Event_Now" render="Label" position="990,113" size="160,30" backgroundColor="secondBG" transparent="1" zPosition="1" foregroundColor="foreground" font="Regular;24" halign="right">
			<convert type="EventTime">Remaining</convert>
			<convert type="RemainingToText">InMinutes</convert>
		</widget>
		<widget source="session.Event_Next" render="Label" position="180,145" size="70,30" backgroundColor="secondBG" transparent="1" zPosition="1" foregroundColor="grey" font="Regular;24" halign="left">
			<convert type="EventTime">StartTime</convert>
			<convert type="ClockToText">Default</convert>
		</widget>
		<widget source="session.Event_Next" render="Label" position="255,145" size="770,30" backgroundColor="secondBG" transparent="1" zPosition="1" foregroundColor="grey" noWrap="1" font="Regular;24" halign="left">
			<convert type="EventName">Name</convert>
		</widget>
		<widget source="session.Event_Next" render="Label" position="1030,145" size="120,30" backgroundColor="secondBG" transparent="1" zPosition="1" foregroundColor="grey" font="Regular;24" halign="right">
			<convert type="EventTime">Duration</convert>
			<convert type="ClockToText">InMinutes</convert>
		</widget>
		<widget source="session.Event_Now" render="Progress" pixmap="infobar/pbar.png" position="180,103" size="840,8" backgroundColor="un33333a" transparent="0" zPosition="2" borderWidth="0">
			<convert type="EventTime">Progress</convert>
		</widget>
		<widget source="global.OnlineStableUpdateState" render="Pixmap" pixmap="icons/icon_stableupdate.png" position="5,45" size="32,32" zPosition="10" alphatest="blend" >
			<convert type="ConditionalShowHide">Blink</convert>
		</widget>
		<widget source="global.OnlineUnstableUpdateState" render="Pixmap" pixmap="icons/icon_unstableupdate.png" position="5,45" size="32,32" zPosition="10" alphatest="blend" >
			<convert type="ConditionalShowHide">Blink</convert>
		</widget>
	</screen>

